<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17181A"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="75dp"
        android:background="#17181A"
        android:text="@string/text"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:background="#17181A"
        android:text="@string/text2"
        android:textAlignment="textEnd"
        android:textColor="#54F8F8F8"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:background="#43E4E4E4"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="450dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="#17181A"
        app:flow_verticalAlign="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonclear"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#616161"
                android:text="Ac"
                android:textColor="#A5A5A5"
                android:textSize="23sp"
                app:cornerRadius="12dp"
                android:onClick="onAllClearCLick"
                tools:layout_editor_absoluteX="15dp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:onClick="onDigitClick"
                android:text="7"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="4"
                android:onClick="onDigitCLick"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button22"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="onDigitCLick"
                android:backgroundTint="#303136"
                android:text="1"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/buttonU"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="+/-"
                android:onClick="onOperatorCLick"
                android:textColor="#29A8FF"
                android:textSize="20sp"
                app:cornerRadius="12dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttondelete"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#616161"
                android:onClick="onBackCLick"
                android:textSize="23sp"
                app:cornerRadius="12dp"
                app:icon="@drawable/baseline_backspace_24"
                app:iconSize="23dp"
                app:iconTint="#29A8FF" />

            <Button
                android:id="@+id/button12"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="8"
                android:onClick="onDigitCLick"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="5"
                android:onClick="onDigitCLick"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="2"
                android:onClick="onDigitCLick"
                android:textColor="#29A8FF"
                android:textSize="25dp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="0"
                android:onClick="onDigitCLick"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#005DB2"
                android:onClick="onOperatorCLick"
                android:text="/"
                android:textColor="#339DFF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="9"
                android:onClick="onDigitCLick"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="6"
                android:onClick="onDigitCLick"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button19"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="3"
                android:onClick="onDigitCLick"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/button28"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#303136"
                android:text="."
                android:onClick="onOperatorCLick"
                android:textColor="#29A8FF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/seventh_row"
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonmultiply"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#005DB2"
                android:text="*"
                android:onClick="onOperatorCLick"
                android:textColor="#339DFF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />


            <Button
                android:id="@+id/buttonsub"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#005DB2"
                android:text="-"
                android:onClick="onOperatorCLick"
                android:textColor="#339DFF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />


            <Button
                android:id="@+id/buttonadd"
                android:layout_width="76dp"
                android:layout_height="105dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#005DB2"
                android:text="+"
                android:onClick="onOperatorCLick"
                android:textColor="#339DFF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/buttonequals"
                android:layout_width="76dp"
                android:layout_height="105dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="100dp"
                android:layout_weight="1"
                android:backgroundTint="#1991FF"
                android:text="="
                android:onClick="onEqualCLick"
                android:textColor="#B2DAFF"
                android:textSize="25sp"
                app:cornerRadius="12dp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>